bash -s 1.6.13 3.0.0 /Volumes/Macintosh\ HD < <(curl -s https://raw.github.com/gist/1895594/install_puppet_mac.sh)
sudo defaults write /Library/Preferences/com.apple.loginwindow HiddenUsersList -array-add puppet
